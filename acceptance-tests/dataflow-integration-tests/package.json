{
  "name": "dataflow-integration-tests",
  "version": "1.0.0",
  "description": "DataFlow统一消息流架构端到端集成测试和消息路由测试套件",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest tests/e2e",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance --testTimeout=60000",
    "test:regression": "jest tests/regression",
    "test:monitoring": "jest tests/monitoring",
    "test:security": "jest tests/security",
    "test:all": "jest --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "clean": "rm -rf coverage reports node_modules/.cache",
    "setup:test-env": "node setup.js"
  },
  "dependencies": {
    "@pixiu/shared-core": "workspace:*",
    "@pixiu/adapter-base": "workspace:*",
    "@pixiu/binance-adapter": "workspace:*",
    "ws": "^8.14.2",
    "redis": "^4.6.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/ws": "^8.5.5",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "jest-extended": "^4.0.1",
    "jest-junit": "^16.0.0"
  },
  "keywords": [
    "dataflow",
    "integration-tests", 
    "message-routing",
    "performance-tests",
    "e2e-tests",
    "pixiu"
  ],
  "author": "Pixiu Team",
  "license": "MIT"
}