{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "jest", "ws"],
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../services/data-collection/exchange-collector/src/*"],
      "@pixiu/shared-core": ["../../services/infrastructure/shared-core/src"],
      "@pixiu/exchange-collector": ["../../services/data-collection/exchange-collector/src"],
      "@test/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "setup.ts",
    "../../services/data-collection/exchange-collector/src/websocket/**/*.ts",
    "../../services/infrastructure/shared-core/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "reports",
    "logs",
    "**/*.d.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}