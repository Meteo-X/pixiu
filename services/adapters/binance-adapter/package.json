{
  "name": "@pixiu/binance-adapter",
  "version": "1.0.0",
  "description": "Binance exchange adapter for real-time market data collection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test:gcloud": "ts-node src/test-gcloud.ts"
  },
  "keywords": ["binance", "websocket", "market-data", "adapter", "trading"],
  "author": "Pixiu Trading System",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.16.0",
    "@google-cloud/pubsub": "^4.0.7",
    "decimal.js": "^10.4.3",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "yaml": "^2.3.4",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixiu-trading/pixiu.git",
    "directory": "services/adapters/binance-adapter"
  }
}