{
  "name": "binance-adapter-config-acceptance-tests",
  "version": "1.0.0",
  "description": "Task 1.3 - 配置系统设计验收测试套件",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:acceptance": "jest tests/acceptance",
    "test:integration": "jest tests/integration",
    "test:regression": "jest tests/regression",
    "test:performance": "jest tests/performance",
    "test:security": "jest tests/security",
    "test:all": "jest --testPathPattern=tests",
    "test:report": "jest --coverage --coverageReporters=text --coverageReporters=html"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@types/js-yaml": "^4.0.5",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "@google-cloud/secret-manager": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "../../../src/config/**/*.ts",
      "!../../../src/config/**/*.d.ts",
      "!../../../src/config/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
    "testTimeout": 30000,
    "maxWorkers": 4
  }
}