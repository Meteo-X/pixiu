{
  "name": "@pixiu/binance-adapter-task-2.4-tests",
  "version": "1.0.0",
  "description": "Acceptance tests for Task 2.4: Error Handling and Monitoring",
  "main": "setup.ts",
  "scripts": {
    "test": "jest",
    "test:acceptance": "jest tests/acceptance",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance",
    "test:regression": "jest tests/regression",
    "test:scenario": "jest tests/scenario",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:simple": "jest --config=jest.config.simple.js",
    "clean": "rm -rf coverage reports"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "uuid": "^11.1.0",
    "ws": "^8.16.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "../../src/connector/ErrorHandler.ts",
      "../../src/connector/LatencyMonitor.ts", 
      "../../src/connector/AdapterStatusMonitor.ts",
      "../../src/BinanceAdapterEnhanced.ts"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
    "testTimeout": 30000,
    "verbose": true
  }
}