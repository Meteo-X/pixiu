{
  "name": "@pixiu/performance-validation-system",
  "version": "1.0.0",
  "description": "Comprehensive performance testing and validation system for Exchange Collector refactoring verification",
  "private": true,
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch --runInBand",
    "test:throughput": "jest --testPathPattern='throughput' --runInBand",
    "test:latency": "jest --testPathPattern='latency' --runInBand", 
    "test:memory": "jest --testPathPattern='memory' --runInBand",
    "test:websocket": "jest --testPathPattern='websocket' --runInBand",
    "test:dataflow": "jest --testPathPattern='dataflow' --runInBand",
    "test:stability": "jest --testPathPattern='stability' --runInBand",
    "test:monitoring": "jest --testPathPattern='monitoring' --runInBand",
    "test:regression": "jest --testPathPattern='regression' --runInBand",
    "test:all-performance": "npm run test:throughput && npm run test:latency && npm run test:memory",
    "test:all-integration": "npm run test:websocket && npm run test:dataflow && npm run test:stability",
    "test:full-validation": "npm run baseline && npm run test && npm run benchmark && npm run generate-report",
    "test:goals-validation": "jest --testPathPattern='goals-validation' --runInBand",
    "test:ci-performance": "jest --testPathPattern='ci' --runInBand --maxWorkers=1",
    "generate-report": "node scripts/generate-performance-report.js",
    "benchmark": "node scripts/run-benchmarks.js",
    "monitor": "node scripts/performance-monitor.js",
    "baseline": "node scripts/create-baseline.js",
    "compare": "node scripts/compare-performance.js",
    "dashboard": "node scripts/start-monitoring-dashboard.js",
    "alert-setup": "node scripts/setup-alerts.js",
    "ci-gate": "node scripts/ci-performance-gate.js"
  },
  "dependencies": {
    "@pixiu/exchange-collector": "file:..",
    "@pixiu/shared-core": "^1.0.0",
    "@pixiu/adapter-base": "^1.0.0",
    "@pixiu/binance-adapter": "^1.0.0",
    "ws": "^8.16.0",
    "express": "^4.18.2",
    "clinic": "^13.0.0",
    "autocannon": "^7.15.0",
    "pidusage": "^3.0.2",
    "hdr-histogram-js": "^3.0.0",
    "perf_hooks": "^0.0.1",
    "prometheus-client": "^15.1.0",
    "grafana-dash-gen": "^2.0.1",
    "node-fetch": "^2.7.0",
    "chalk": "^4.1.2",
    "table": "^6.8.1",
    "yaml": "^2.3.4",
    "csv-writer": "^1.6.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.10",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
    "collectCoverageFrom": [
      "tests/**/*.ts",
      "!tests/**/*.d.ts",
      "!tests/**/fixtures/**",
      "!tests/**/mock-*/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testTimeout": 300000,
    "maxWorkers": 1,
    "forceExit": true
  }
}